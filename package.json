{
  "name": "wundergraph-application",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "setup": "npm run start:services && wait-on -d 5000 tcp:5432 && cd game && npm run build && npm run typeorm migration:run",
    "start": "npm run setup && run-p nestjs dev wundergraph seed",
    "nestjs": "cd game && npm run start:dev",
    "start:services": "docker compose --env-file docker.env up -d",
    "wundergraph": "cd .wundergraph && wunderctl up -e ./../.env --debug",
    "open": "wait-on -d 500 http://localhost:9991 && open-cli http://localhost:3000",
    "seed": "wait-on -d 2000 http://localhost:9991 && npm run open",
    "build": "next build",
    "dev": "next dev",
    "migrate": "prisma format && prisma migrate dev --name",
    "cleanup": "docker-compose down -v",
    "wunderctl": "wunderctl",
    "check": "tsc --noEmit"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@wundergraph/nextjs": "^0.0.35",
    "@wundergraph/sdk": "^0.96.1",
    "graphql": "^16.3.0",
    "next": "^12.2.5",
    "npm-run-all": "^4.1.5",
    "open-cli": "^7.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "^18.7.3",
    "@types/react": "^18.0.17",
    "run-p": "^0.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4",
    "wait-on": "^6.0.1"
  }
}
